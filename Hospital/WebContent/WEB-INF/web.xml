<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>service.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>service.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>modifyInfoServlet</servlet-name>
        <servlet-class>service.modifyInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyInfoServlet</servlet-name>
        <url-pattern>/modifyInfoServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manageMessagesServlet</servlet-name>
        <servlet-class>service.manageMessagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manageMessagesServlet</servlet-name>
        <url-pattern>/manageMessagesServlet</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <servlet>
    	<servlet-name>doctorListServlet</servlet-name>
    	<servlet-class>service.doctorListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>doctorListServlet</servlet-name>
    	<url-pattern>/doctorListServlet</url-pattern>
    </servlet-mapping>
    <servlet>
    	<servlet-name>orderDoctorServlet</servlet-name>
    	<servlet-class>service.orderDoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>orderDoctorServlet</servlet-name>
    	<url-pattern>/orderDoctorServlet</url-pattern>
    </servlet-mapping>
    <servlet>
    	<servlet-name>manageConsultationServlet</servlet-name>
    	<servlet-class>service.manageConsultationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>manageConsultationServlet</servlet-name>
    	<url-pattern>/manageConsultationServlet</url-pattern>
    </servlet-mapping>
    <servlet>
    	<servlet-name>modifyConsultationServlet</servlet-name>
    	<servlet-class>service.modifyConsultationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>modifyConsultationServlet</servlet-name>
    	<url-pattern>/modifyConsultationServlet</url-pattern>
    </servlet-mapping>
</web-app>